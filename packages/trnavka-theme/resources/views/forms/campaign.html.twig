{% set isCampaignForm = donation_form.otherAmount is defined %}
<div class="d-none js-darujme-form-holder"></div>
<div class="modal-content donation-form js-donation-form">
    {{ form_start(donation_form, {attr: {novalidate: 'novalidate'}}) }}
    <div class="modal-header">
        <h5 class="modal-title">{% if isCampaignForm %}Prispej na zbierku{% else %}Prispievaj mesačne{% endif %}</h5>
        {% if not isCampaignForm %}
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">&times;</button>
        {% endif %}
    </div>
    <div class="modal-body">

        {{ form_errors(donation_form) }}

        <div class="field-group mb-4 donation-form-amount">
            <h6>Suma:</h6>
            {{ form_row(donation_form.amount) }}
            {% if isCampaignForm %}
                <div class="js-other-sum{% if donation_form.amount.vars.data is not empty %} d-none {% endif %} pt-2">
                    {{ form_row(donation_form.otherAmount) }}
                </div>
            {% endif %}
        </div>
        <div class="field-group mb-3">
            <h6>Osobné údaje:</h6>
            <div class="row form-row">
                <div class="col-sm-6">
                    {{ form_row(donation_form.firstName) }}
                </div>
                <div class="col-sm-6">
                    {{ form_row(donation_form.lastName) }}
                </div>
                <div class="col-12">
                    {{ form_row(donation_form.email) }}
                </div>
            </div>


        </div>
        <div class="field-group mb-4">
            <h6>Spôsob platby:</h6>
            {{ form_widget(donation_form.paymentType) }}
        </div>
        <div class="field-group mb-4">
            <hr>
            <div class="mb-3">
                {{ form_widget(donation_form.terms) }}
            </div>

            <div class="mb-4">
                {{ form_widget(donation_form.gdpr) }}
            </div>

            <p class="small text-muted">
                Potvrdením údajov súhlasím s <a href="https://darujme.sk/pravidla-a-podmienky/" target="_blank">pravidlami</a> používania <a href="https://darujme.sk/pre-darcov/" target="_blank">DARUJME.sk</a>. Zároveň beriem na vedomie, že poskytujem finančný dar bez protihodnoty a teda na platobnú operáciu sa nevzťahujú možnosti reklamácie platby ako pri nákupe služieb a tovarov.
            </p>
        </div>
    </div>
    <div class="modal-footer justify-content-center">
        <div class="text-center w-100">
            {% if not donation_form.vars.valid %}
                <p class="small mb-2 text-danger">
                    Formulár sa neodoslal. Prosím, skontrolujte a opravte zadané údaje.
                </p>
            {% endif %}
            <button type="submit" class="submit-form-btn">{% if isCampaignForm %}Darovať{% else %}Začať prispievať{% endif %}</button>
            <p class="small mb-0 text-muted">
                {% if isCampaignForm %}
                    Platba realizovaná prostredníctvom <a href="https://darujme.sk/pre-darcov/" target="_blank">DARUJME.sk</a>
                {% else %}
                    Platby realizované prostredníctvom <a href="https://darujme.sk/pre-darcov/" target="_blank">DARUJME.sk</a>
                {% endif %}
            </p>
        </div>
    </div>
    {{ form_end(donation_form) }}
</div>
